{
  "$schema": "https://raw.githubusercontent.com/.../theme.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0bc",
          "template": " {{ .Icon }} <b>{{ .HostName }}</b> ",
          "foreground": "#1f1f1f",
          "background": "#CFA561",
          "type": "os",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "\uf115",
            "folder_separator_icon": "/",
            "home_icon": "~",
            "style": "full"
          },
          "trailing_diamond": "\ue0bc",
          "template": " <b>{{ .Path }}</b> ",
          "foreground": "#1f1f1f",
          "background": "#CFA561",
          "type": "path",
          "style": "diamond"
        },
        {
          "properties": {
            "branch_icon": " <#1f1f1f>\ue0a0 </>",
            "cache_duration": "none",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "trailing_diamond": "\ue0bc",
          "template": " <b>({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }})</b> ",
          "foreground": "#1f1f1f",
          "background": "#CFA561",
          "type": "git",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0bc",
          "template": " <b>\ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }}</b> ",
          "foreground": "#1f1f1f",
          "background": "#CFA561",
          "type": "python",
          "style": "diamond"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0bc",
          "template": " <b>{{ .FormattedMs }}</b> ",
          "foreground": "#1f1f1f",
          "background": "#CFA561",
          "type": "executiontime",
          "style": "diamond"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0b0",
          "template": " {{ if gt .Code 0 }}\uf421{{ else }}\uf469{{ end }} ",
          "foreground": "#1f1f1f",
          "background": "#CFA561",
          "type": "status",
          "style": "diamond",
          "background_templates": ["{{ if gt .Code 0 }}red{{ end }}"]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\ue3bf ",
          "foreground": "#E95377",
          "type": "root",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ if .Root }}<#E95377><b>#</b></> {{ else }}<#CFA561><b>$</b></> {{ end }}<b>{{ .UserName }}</b> <#CFA561><b>❯❯</b></>",
          "foreground": "#CFA561",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
